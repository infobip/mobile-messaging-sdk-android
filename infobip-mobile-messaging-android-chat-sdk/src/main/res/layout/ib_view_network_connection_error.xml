<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/ib_chat_network_connection_error_background"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables"
        >

        <ImageView
            android:id="@+id/ib_lc_connection_error_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@null"
            android:src="@drawable/ib_chat_network_error_icon"
            app:tint="@color/ib_chat_network_connection_error_icon"
            />

        <TextView
            android:id="@+id/ib_lc_connection_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ib_chat_no_connection"
            android:textColor="@color/ib_chat_network_connection_error_text"
            android:textSize="16sp"
            />
    </LinearLayout>
</merge>