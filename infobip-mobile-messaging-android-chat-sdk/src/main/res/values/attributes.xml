        <attr name="ibChatFullScreenErrorTitleText" format="string|reference"/>
        <attr name="ibChatFullScreenErrorTitleTextColor" format="color|reference"/>
        <attr name="ibChatFullScreenErrorTitleTextAppearance" format="reference"/>
        <attr name="ibChatFullScreenErrorDescriptionText" format="string|reference"/>
        <attr name="ibChatFullScreenErrorDescriptionTextColor" format="color|reference"/>
        <attr name="ibChatFullScreenErrorDescriptionTextAppearance" format="reference"/>
        <attr name="ibChatFullScreenErrorBackgroundColor" format="color|reference"/>
        <attr name="ibChatFullScreenErrorIcon" format="reference"/>
        <attr name="ibChatFullScreenErrorIconTint" format="color|reference"/>
        <attr name="ibChatFullScreenErrorRefreshButtonText" format="string|reference"/>
        <attr name="ibChatFullScreenErrorRefreshButtonTextColor" format="color|reference"/>
        <attr name="ibChatFullScreenErrorRefreshButtonVisible" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="InAppChatInputViewStyleable">
        <attr name="ibChatInputTextAppearance" format="reference" />
        <attr name="ibChatInputTextColor" format="color|reference" />
        <attr name="ibChatInputBackgroundColor" format="color|reference" />
        <attr name="ibChatInputHintText" format="string|reference" />
        <attr name="ibChatInputHintTextColor" format="color|reference" />
        <attr name="ibChatInputAttachmentIcon" format="reference" />
        <attr name="ibChatInputAttachmentIconTint" format="color|reference" />
